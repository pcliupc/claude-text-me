{
  "name": "claude-text-me",
  "version": "0.1.0",
  "description": "Send messages to your phone via Feishu/Lark when Claude needs your attention. Supports bidirectional communication.",
  "author": {
    "name": "pcliu"
  },
  "mcpServers": {
    "claude-text-me": {
      "command": "bun",
      "args": ["run", "--cwd", "${CLAUDE_PLUGIN_ROOT}", "start"],
      "env": {
        "TEXTME_FEISHU_APP_ID": "${TEXTME_FEISHU_APP_ID}",
        "TEXTME_FEISHU_APP_SECRET": "${TEXTME_FEISHU_APP_SECRET}",
        "TEXTME_FEISHU_USER_ID": "${TEXTME_FEISHU_USER_ID}"
      }
    }
  }
}
